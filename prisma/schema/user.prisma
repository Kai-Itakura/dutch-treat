model User {
  id        String   @id
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
  name      String?

  EventGroups    EventGroup[]
  Expenses      Expense[]
  refreshTokens RefreshToken[]

  ReceiverSettlement Settlement[] @relation("receiver")
  PayerSettlement    Settlement[] @relation("payer")
}
